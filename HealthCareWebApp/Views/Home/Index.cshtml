@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <title>Welcome to Our Hospital</title>

    <style>
        body {
            background-image: url('image.jpg');
            font-family: "Open Sans", sans-serif;
        }

        .hero-container {
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            text-align: center;
        }

            .hero-container h1 {
                font-size: 6rem;
                margin-bottom: 2rem;
                /* color: white;

                                        text-shadow: 2px 2px #0095ff;*/
            }

            .hero-container p {
                font-size: 2rem;
                margin-bottom: 2rem;
                /* color: white;

                                        text-shadow: 2px 2px #0095ff; */
            }

            .hero-container button {
                font-size: 1.5rem;
                padding: 1rem 2rem;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                transition: all 0.3s ease-in-out;
            }

            .hero-container button a{
                text-decoration: none;
                color: white;
            }
                .hero-container button:hover {
                    background-color: #0062cc;
                    cursor: pointer;
                }
    </style>
</head>
<body>
    <div class="hero-container">

        <h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl"><span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Your Health,</span> Our Priority.</h1>

        <p>We provide the best medical services for you and your family.</p>
        <button style="text-decoration: none; color: white;">
            <a asp-area="" asp-controller="Doctors" asp-action="Index">Start Here</a>
        </button>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>

</body>
</html>
